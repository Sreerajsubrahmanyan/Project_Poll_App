<div class="container mt-4">
  <h2 class="text-center">Log In</h2>

  <div class="card p-4 mx-auto" style="max-width: 400px;">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% if resource.errors.any? %>
        <p class="text-danger"> <%= resource.errors.full_messages.first %> </p>
      <% end %>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, required: true, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, required: true, class: "form-control", autocomplete: "current-password" %>
      </div>

      <%= f.submit "Log in", class: "btn btn-success w-100" %>
    <% end %>
  </div>

  <div class="text-center mt-3">
    <%= link_to "Forgot your password?", new_user_password_path, class: "btn btn-link" %>

    <%= link_to "Back to Home", root_path, class: "btn btn-secondary" %>
  </div>
</div>
